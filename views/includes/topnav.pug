.header.clearfix
  nav.navbar.navbar-expand-md.navbar-light.bg-light.fixed-top
    .container
      a.navbar-brand(href="/") JBrite
      button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarsExampleDefault", aria-controls="navbarsExampleDefault", aria-expanded="false", aria-label="Toggle navigation")
        span.navbar-toggler-icon

      #navbarsExampleDefault.collapse.navbar-collapse
        ul.navbar-nav.ml-auto
          li.nav-item
            a.nav-link(href="/events") BROWSE EVENT
          if (currentUser && ( currentUser.name == "admin"))
            li.nav-item
                a.nav-link(href='/admin') ADMIN
          if (!currentUser)
            li.nav-item
              a.nav-link(href='/signin') Signin 
            li.nav-item
              a.nav-link(href='/users/new') Signup
          else
            li.nav-item
              a.nav-link(href=`/users/${currentUser._id}`) My Profile
            li.nav-item
              a.nav-link(href='/signout') Signout
          li.nav-item
              a.nav-link(href='/events/new') Create Event